  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch (simple)",
      "type": "dotnet",
      "request": "launch",
      "projectPath": "${workspaceFolder}/AzureDDNS/AzureDDNS.csproj"
    },
    {
      "name": "Launch (web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/AzureDDNS/bin/Debug/net9.0/AzureDDNS.dll",
      "args": [],
      "cwd": "${workspaceFolder}/AzureDDNS",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Launch (Docker)",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "netCore": {
        "appProject": "${workspaceFolder}/AzureDDNS/AzureDDNS.csproj"
      }
    }
  ]
}
